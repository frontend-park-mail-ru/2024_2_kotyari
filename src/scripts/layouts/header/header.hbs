<link rel="stylesheet" href="/src/scripts/layouts/header/header.css">

<header>
    <!-- Первая строка -->
    <div class="header-top">
        <span>{{city}}. <a href="/changeSity" router="stability-active">Изменить город</a></span>
    </div>

    <!-- Вторая строка -->
    <div class="header-bottom">
        <div class="logo" id="logo" href="/catalog" router="stability-active">Оксик</div>
        <button class="catalog-button" title="Каталог" href="/catalog" router="stability-active">&#8801;<span>Каталог</span></button>
        {{> searcher }}
        <div class="icons">
            <div class="icon">
                <span class="material-icons">account_circle</span>
                {{#if name}}
                    <span class="icon-label-hidden">{{name}}</span>
                    <div class="icon-dropdown">
                        <a href="#" router="stability-active">Личный кабинет</a>
                        <a href="/logout" router="stability-active">Выход</a>
                    </div>
                {{else}}
                    <span class="icon-label-hidden">Аватар</span>
                    <div class="icon-dropdown">
                        <a href="/login" router="stability-active">Вход</a>
                        <a href="/signup" router="stability-active">Регистрация</a>
                    </div>
                {{/if}}
            </div>
            <div router="stability-active" class="icon" href="/basket" title="Корзина">
                <span class="material-icons">shopping_cart</span>
                <span class="icon-label">Корзина</span>
            </div>
            <div router="stability-active" class="icon" href="/favorite" title="Избранное">
                <span class="material-icons">favorite_border</span>
                <span class="icon-label">Избранное</span>
            </div>
            <div router="stability-active" class="icon" href="/records" title="Заказы">
                <span class="material-icons">receipt_long</span>
                <span class="icon-label">Заказы</span>
            </div>
        </div>
    </div>
</header>
