<div id="{{id}}" class="modal__main" tabindex="-1">
    <div class="modal__container">
        <span class="btn__close" data-action="close">&times;</span>
        <h1 class="logo">{{logo}}</h1>
        <h2 class="modal__title">{{title}}</h2>
        <form id="{{formId}}" action="{{action}}" method="post">
            <span class="errors__feedback" id="error"></span>
            {{#each fields as |field|}}
                <label for="{{field.id}}">{{field.label}}:</label>
                <input type="{{field.type}}" id="{{field.id}}" name="{{field.name}}" placeholder="{{placeholder}}"
                       data-error-id="{{field.error_id}}" {{#if field.required}}required{{/if}} />
                <span class="errors__feedback" id="{{field.error_id}}"></span>
            {{/each}}
            <button type="submit">{{submitText}}</button>
        </form>
    </div>
</div>