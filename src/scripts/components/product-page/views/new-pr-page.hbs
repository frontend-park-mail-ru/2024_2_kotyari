<div id="wishlistModal" class="modal-add-wish">
  <div class="modal-add-wish__content">
    <h2 class="modal-add-wish__header">Выберите вишлисты</h2>
    <form id="wishlistForm" class="modal-add-wish__form">
      <div id="wishlistCheckboxes" class="modal-add-wish__checkboxes">
        <!-- Чекбоксы будут загружаться динамически сюда -->
      </div>
      <button type="submit" class="modal-add-wish__submit-button">Добавить в выбранные</button>
      <button type="button" class="modal-add-wish__close-button">Закрыть</button>
    </form>
  </div>
</div>


<div class="product">
  {{> carousel-slider images=images }}
  <div class="product-page__product-info">
    <h1 class="product-page__product-name">{{title}}</h1>
    <div class="product-page__rating">
      <span class="text-rating reviews-header-scroll">
        <svg xmlns="http://www.w3.org/2000/svg"
             height="24px"
             viewBox="0 -960 960 960"
             width="24px" fill="#ffcd42">
          <path d="m378-330 102-60 103 60-29-113
          89-75-116-10-47-108-47 109-116
          9 90 74-29 114ZM185-65l80-331L3-620l343-29
           134-313 134 314 343 28-262 224 80
           331-295-176L185-65Zm295-408Z" />
        </svg>
        <span id="rating-header">{{rating}}</span>
      </span>
      <span class="text-review reviews-header-scroll" id="reviews-header">{{formatNumber review_count}} {{pluralize
        review_count 'отзыв' 'отзыва' 'отзывов'}}</span>
    </div>
    <div class="product-page__brand">
      <img src="{{seller.logo}}" alt="brand logo">
      {{seller.name}}
    </div>
    <div class="product-page__characteristics">
      <ul>
        {{#each characteristics}}
          <div class="product-page__description-item">
            <span class="product-page__description-key">{{@key}}</span>: <span
            class="product-page__description-value">{{this}}</span>
          </div>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="product-page__purchase-info">
    <div class="product-page__price-box">
      <div class="product-page__price-and-favorite">
        <div class="product-page__current-price-product-page">{{price}} ₽</div>
        <button class="product-page__favorite-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="#ff4040" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 21s-3-3.2-5-5.1c-1.9-2-3-3.6-3-5.4C4 7.2 5.4 5 7.5 5c1.4 0 2.7 1.1 3.5 2.5C12.3 6.1 13.6 5 15 5c2.1 0 3.5 2.2 3.5 4.5 0 1.8-1.1 3.4-3 5.4-2 1.9-5 5.1-5 5.1z"/>
          </svg>
        </button>
      </div>

      <div class="product-page__old-price">{{original_price}} ₽</div>
      <div class="product-page__cart-container">
        <button class="product-page__cart-button" {{#if flag}}router="changed-active"
                href="/login"{{/if}}>{{value}}</button>
      </div>
    </div>
  </div>
</div>

<div class="product-page__description-product-page">
  <h2 class="product-page__description__header">Описание</h2>
  <div class="product-page__description">{{description}}</div>
</div>

<div class="recommendations-page" id="recommendations-page"></div>

<div id="reviews">
</div>


